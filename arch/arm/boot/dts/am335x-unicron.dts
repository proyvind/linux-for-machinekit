		compatible = "max6675";
		reg = <0>;
		registers-number = <1>;
		spi-max-frequency = <2000000>;

		gpio-controller;

	};
};

&spi1 {
	compatible = "spi-gpio";
	pinctrl-names = "default";
	pinctrl-0 = <&bb_spi1_pins>;
	status = "okay";
	num-chipselects = <2>;

	hc595: stepper_spi@0 {
		compatible = "fairchild,74hc595", "stepper_spi";
		reg = <0>;
		registers-number = <1>;
		spi-max-frequency = <2000000>;

		gpio-controller;

	};

	dac088: dac088_spi@0 {
		compatible = "dac088_regulator";
		gpio-controller;
		reg = <1>;
		registers-number = <2>;
		spi-max-frequency = <2000000>;
	};
