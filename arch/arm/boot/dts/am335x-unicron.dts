	ti,non-removable;
};

&am33xx_pinmux {
	bb_spi0_pins: pinmux_bb_spi0_pins {
		pinctrl-single,pins = <
			BONE_P9_22 (PIN_INPUT_PULLDOWN | MUX_MODE0) 	/* (A17) spi0_sclk.spi0_sclk */
			BONE_P9_21 (PIN_INPUT_PULLUP | MUX_MODE0)	/* (B17) spi0_d0.spi0_d0 */
			BONE_P9_18 (PIN_INPUT_PULLDOWN | MUX_MODE0)	/* (B16) spi0_d1.spi0_d1 */
			BONE_P9_17 (PIN_INPUT_PULLUP | MUX_MODE0)	/* (A16) spi0_cs0.spi0_cs0 */
			>;
		      };
	bb_spi1_pins: pinmux_bb_spi1_pins {
		pinctrl-single,pins = <
			/* P9_31: mcasp0_aclkx.spi1_sclk */
			BONE_P9_31 (PIN_OUTPUT_PULLDOWN | MUX_MODE3)
			/* P9_29: mcasp0_fsx.spi1_d0 */
			BONE_P9_29 (PIN_INPUT_PULLDOWN | MUX_MODE3)
			/* P9_30: mcasp0_axr0.spi1_d1 */
			BONE_P9_30 (PIN_OUTPUT_PULLDOWN | MUX_MODE3)
			/* P9_28: mcasp0_ahclkr.spi1_cs0 */
			BONE_P9_28 (PIN_OUTPUT_PULLUP | MUX_MODE3)
			/* P9_19: uart1_rtsn.spi1_cs1 */
			//BONE_P9_19 (PIN_OUTPUT_PULLDOWN | MUX_MODE4)
			>;
		      };

	ecap0_pins_default: backlight_pins {
		pinctrl-single,pins = <
			BONE_P9_42A 0x0       /* eCAP0_in_PWM0_out.eCAP0_in_PWM0_out MODE0 */
		>;
	};

	ecap0_pins_sleep: ecap0_pins_sleep {
		pinctrl-single,pins = <
			BONE_P9_42A  (PULL_DISABLE | MUX_MODE7)       /* eCAP0_in_PWM0_out.eCAP0_in_PWM0_out */
		>;
	};
	dcan0_default: dcan0_default_pins {
		pinctrl-single,pins = <
			BONE_P9_20 0x0a      /* uart1_ctsn.dcan0_tx_mux2, OUTPUT | MODE2 */
			BONE_P9_19 0x2a      /* uart1_rtsn.dcan0_rx_mux2, INPUT | MODE2 */
		>;
	};

	ehrpwm0_pins: pinmux_ehrpwm0_pins {
		pinctrl-single,pins = <
			BONE_P9_22 (PIN_OUTPUT_PULLDOWN | MUX_MODE3)	// spi0_sclk.ehrpwm0A
			BONE_P9_21 (PIN_OUTPUT_PULLDOWN | MUX_MODE3)	// spi0_d0.ehrpwm0B
		>;
	};
/* BBP ONLY
	ehrpwm1a_pins: pinmux_ehrpwm1a_pins {
		pinctrl-single,pins = <
			AM33XX_IOPAD(0x848, PIN_OUTPUT_PULLDOWN | MUX_MODE6)     // gpmc_a2.ehrpwm1a
		>;
	};
*/

	ehrpwm1b_pins: pinmux_ehrpwm1b_pins {
		pinctrl-single,pins = <
			AM33XX_IOPAD(0x84c, PIN_OUTPUT_PULLDOWN | MUX_MODE6)     // gpmc_a3.ehrpwm1b
		>;
	};
/*
	gpio_leds_pins: pinmux_gpio_leds_pins {
		pinctrl-single,pins = <
			0x198 (PIN_OUTPUT_PULLDOWN | MUX_MODE7)			// mcasp0_aclkr.gpio3_18
		>;
	};
*/
//	P9_20_i2c_pin: pinmux_P9_20_i2c_pin {
//		pinctrl-single,pins = <0x178  0x73>; };     /* (SLEWCTRL_SLOW | PIN_INPUT_PULLUP | MUX_MODE3) */

	pwr_button_pins: pinmux_pwr_button_pins {
		pinctrl-single,pins = <
			BONE_P9_30 (PIN_INPUT_PULLDOWN | MUX_MODE7) // mcasp0_axr0.gpio3_16
		>;
	};
	usb0_pins: pinmux_usb0_pins {
		pinctrl-single,pins = <
			0x21c (PIN_OUTPUT_PULLDOWN | MUX_MODE0) // usb0_drvvbus.usb0_drvvbus
		>;
	};

	usb1_pins: pinmux_usb1_pins {
		pinctrl-single,pins = <
			0x234 (PIN_OUTPUT_PULLDOWN | MUX_MODE0) // usb1_drvvbus.usb1_drvvbus
		>;
	};

	bb_lcd_pwm_backlight_pins: pinmux_bb_lcd_pwm_backlight_pins {
		pinctrl-single,pins = <
			0x1b0 (PIN_OUTPUT_PULLUP | MUX_MODE7)	/* xdma_event_intr0.gpio0_19 */
			BONE_P9_41B (PIN_OUTPUT_PULLUP | MUX_MODE7)	/* mcasp0_axr1.gpio3_21 */
		>;
	};
	user_leds_s1: user_leds_s1 {
	      pinctrl-single,pins = <
			BONE_P9_42B (PIN_OUTPUT_PULLDOWN | MUX_MODE7)	// mcasp0_aclkr.gpio3_18
		>;
	};
	ft5x06_ts_pins: pinmux_ft5x06_ts_pins {
		pinctrl-single,pins = <
			BONE_P9_27 (PIN_INPUT_PULLDOWN | MUX_MODE7)	/* mcasp0_fsr.gpio3_19 */
			BONE_P9_16 (PIN_OUTPUT_PULLUP | MUX_MODE7)	/* mcasp0_axr1.gpio3_20 */
		>;
	};
	lmsw_pins: pinmux_lmsw_pins {
		pinctrl-single,pins = <
			BONE_P8_18 (PIN_INPUT_PULLUP | MUX_MODE7)	/* gpmc_clk.gpio2_1 */
			BONE_P9_23 (PIN_INPUT_PULLUP | MUX_MODE7)	/* gpmc_a1.gpio1_17 */ 
			BONE_P9_13 (PIN_INPUT_PULLUP | MUX_MODE7)	/* gpmc_wpn.gpio0_31 */
			BONE_P9_11 (PIN_INPUT_PULLUP | MUX_MODE7)	/* gpmc_wait0.gpio0_30 */
			BONE_P8_26 (PIN_INPUT_PULLUP | MUX_MODE7)	/* gpmc_csn0.gpio1_29 */
			BONE_P9_12 (PIN_INPUT_PULLUP | MUX_MODE7)	/* uart1_txd.gpio0_15*/ 

		>;

	};
	drv8825_stepper_pins: pinmux_drv8825_stepper_pins {
		pinctrl-single,pins = <
			0x54 (PIN_OUTPUT_PULLDOWN | MUX_MODE7)		/* gpmc_a5.gpio1_21, step x */
			0x58 (PIN_OUTPUT_PULLDOWN | MUX_MODE7)		/* gpmc_a6.gpio1_22, step y */ 
			0x5C (PIN_OUTPUT_PULLDOWN | MUX_MODE7)		/* gpmc_a7.gpio1_23, step z */
			BONE_P9_12 (PIN_OUTPUT_PULLDOWN | MUX_MODE7)	/* gpmc_ben1.gpio1_28, step ext1 */
			0x60 (PIN_OUTPUT_PULLDOWN | MUX_MODE7)		/* gpmc_a8.gpio1_24, step ext2 */
			0x64 (PIN_OUTPUT_PULLDOWN | MUX_MODE7)		/* gpmc_a9.gpio1_25, step ext3 */ 
			0x6C (PIN_OUTPUT_PULLDOWN | MUX_MODE7)		/* gpmc_a11.gpio1_27, step user */
			0X07 (PIN_OUTPUT_PULLDOWN | MUX_MODE7)		/* gpmc_a2.gpio1_18, step exp */
			0x88 (PIN_OUTPUT_PULLDOWN | MUX_MODE7)		/* gpmc_csn3.gpio2_0, dir x */
			BONE_P8_10 (PIN_OUTPUT_PULLDOWN | MUX_MODE7)	/* gpmc_gpmc_wen.gpio2_4, dir y */
			BONE_P8_08 (PIN_OUTPUT_PULLDOWN | MUX_MODE7)	/* gpmc_oen_ren.gpio2_3, dir z */
			BONE_P8_07 (PIN_OUTPUT_PULLDOWN | MUX_MODE7)	/* gpmc_advn_ale.gpio2_2, dir ext1 */
			BONE_P8_09 (PIN_OUTPUT_PULLDOWN | MUX_MODE7)	/* gpmc_ben0_cle.gpio2_5, dir ext2 */
			0x1E4 (PIN_OUTPUT_PULLDOWN | MUX_MODE7)		/* emu0.gpio3_7, dir ext3 */
			0x1E8 (PIN_OUTPUT_PULLDOWN | MUX_MODE7)		/* emu1.gpio3_8, dir user */
			BONE_P9_41A (PIN_OUTPUT_PULLDOWN | MUX_MODE7)	/* xdma_event_intr1.gpio0_20, dir exp */
			BONE_P9_20 (PIN_OUTPUT_PULLDOWN | MUX_MODE7)	/* uart1_ctsn.gpio0_12, 12V-EN */
		>;
	};

};

